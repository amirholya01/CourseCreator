@model dynamic

@{
    ViewBag.Title = "Home";
    Layout = "_Layout";
}

@section SliderContainer
    {
    
    <div class="container">
        @if (User.Identity.IsAuthenticated)
        {
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    
                        <li class="nav-item">
                            <a class="nav-link active" href="https://localhost:7207/UserPanel">Welcome @User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Logout">Logout</a>
                        </li>
                    
                </ul>
            </div>
        </nav>
        }
        <img class="background-image" src="/assets/images/slider.jpeg" alt="Background Image">
        <div class="content">
            <a href="/Login">Login</a>
            <a href="/Register">Register</a>
        </div>
       
    </div>
}
