@model CourseCreator.Core.DTOs.InformationUserViewModel
@{
    ViewData["Title"] = "User Panel " + User.Identity.Name;
}

<style>
.container{
    display: flex;

}

    aside {
        flex: 1; 
        background-color: #f0f0f0;
        padding: 20px;
        box-shadow: 3px 3px 5px 0 rgba(0, 0, 0, 0.3);
        margin-right: 20px;
        text-align: center;
    }

    main {
        flex: 2;
        background-color: #f0f0f0;
        padding: 20px;
        box-shadow: 3px 3px 5px 0 rgba(0, 0, 0, 0.3);
    }

    aside img {
        max-width: 100%;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

        ul li {
            margin-bottom: 10px;
        }

    .info {
        font-size: 18px;
    }
</style>

<nav class="navbar navbar-expand-sm bg-light navbar-light">
    <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link">User Panel @User.Identity.Name</a>
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    <aside>
        <h2>aside</h2>
        <hr/>
        <img  src="/UserAvatar/default.png" alt="img" width="200">
        <ul>
            <li><a href="#"> 1</a></li>
            <li><a href="#"> 2</a></li>
            <li><a href="#"> 3</a></li>
        </ul>
    </aside>

    <main>
        <h2>Main</h2>
        <hr/>
        <div class="info">
            <p><strong>Username:</strong>@Model.Username</p>
            <p><strong>Email:</strong>@Model.Email</p>
            <p><strong>Register-Date:</strong>@Model.RegisterDate</p>
        </div>

    </main>
</div>

