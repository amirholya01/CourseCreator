@model CourseCreator.Core.DTOs.EditProfileViewModel
@{
    ViewData["Title"] = "Edit-Profile";
}

<nav class="navbar navbar-expand-sm bg-light navbar-light">
    <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="/UserPanel">User Panel</a>
            </li>
            <li class="nav-item">
                <a class="nav-link">Edit Profile</a>
            </li>

        </ul>
    </div>
</nav>
<div class="container shadow-sm p-3 mb-5 bg-body rounded">
    @* <Partial name="_SideBar" /> *@

    <main style="min-height: 1300px;" >
        <h2>Edit Profile</h2>
        <hr />
     
        <div class="mt-4 container mb-5 ">
          <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
              <input type="hidden" asp-for="AvatarName" />
              <div class="row">
                    <div class="col-sm-10 mb-3">
                        <input asp-for="Username" type="text" class="form-control" id="inputUsername" placeholder="Username">
                    </div>
                    <div class="col-sm-10 mb-3">
                        <input asp-for="Email" type="text" class="form-control" id="inputEmail" placeholder="Email">
                    </div>
                    <div class="mb-3 col-sm-10">
                        <input asp-for="UserAvatar" class="form-control" type="file" id="formFile">
                        <img class="img-thumbnail" src="/UserAvatar/@Model.AvatarName" style="max-width: 150px;margin-top:5px; "/>
                    </div>
                    <div class="mb-3 col-sm-10">
                        <button type="submit" class="btn btn-success">Edit</button>
                    </div>
              </div>
          </form>
        </div>

    </main>

</div>

