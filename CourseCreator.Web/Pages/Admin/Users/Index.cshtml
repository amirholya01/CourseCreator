@page
@model CourseCreator.Web.Pages.Admin.Users.IndexModel
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row"> 
        <div class="col table-responsive">
            <table class="table table-striped table-responsive">
                <div class="row">
                    <form >
                        <div class="col-sm-5 col-md-5">
                            <input type="text" placeholder="Enter Username" class="form-control" name="filterUsername" />
                        </div>
                        <div class="col-sm-5 col-md-5">
                            <input type="text" placeholder="Enter Email" class="form-control" name="filterEmail" />
                        </div>
                        <div class="col-sm-2 col-md-2">
                            <button type="submit" class="btn btn-info">Search</button>
                        </div>
                    </form>
                </div>
                <div class="container">
                    <div class="col-12 m-3">
                        <a class="btn btn-success">Add new user</a>
                    </div>
                </div>
                <thead>
                    <tr>
                        <th scope="col">Uername</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Registration Date</th>
                        <th scope="col">Commands</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.UserForAdminViewModel.Users)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <p class="text-success">Active</p>
                                }
                                else
                                {
                                    <p class="text-danger">DeActive</p>
                                }
                            </td>
                            <td>@user.RegisterDate</td>
                            <td>
                                <a href="#" class="btn btn-warning btn-sm">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination">
       
        @for(int i = 1; i <= Model.UserForAdminViewModel.PageCount; i++)
        {
            <li class="page-item @((i==Model.UserForAdminViewModel.CurrentPage)?"active" : "")">
                <a class="page-link" href="/Admin/Users?PageId=@i">@i</a>
            </li>
        }

     
    </ul>
</nav>
